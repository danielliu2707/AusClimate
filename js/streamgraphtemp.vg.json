{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 575,
  "height": 500,
  "title": {"text": "Change in Statewise Average Temperatures by Month (2023)", "dy": -30, "font": "Roboto"},
  "data": {"url": "https://raw.githubusercontent.com/danielliu2707/FIT3179/main/data/state_temp.csv"},
  "transform": [
    {
      "calculate": "datum.officialnamestate === 'Queensland' ? 'July was the coldest month across Australia,' : ''",
      "as": "Line1"
    },
    {
      "calculate": "datum.officialnamestate === 'Queensland' ? 'with an average temperature of 12.76°C' : ''",
      "as": "Line2"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "area",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "timeUnit": "month", "field": "Month",
          "axis": {"domain": false, "format": "%B", "tickSize": 0, "grid": false, "title": "Month","titleFont": "Roboto"}
        },
        "y": {
          "aggregate": "sum", "field": "TemperatureMean",
          "axis": null,
          "stack": "center"
        },
        "color": {
          "field": "officialnamestate",
          "type": "nominal",
          "scale": {
            "domain": ["New South Wales", "Queensland", "South Australia", "Tasmania", "Territories", "Victoria", "Western Australia"],
            "range": ["#3585bc", "#fe711a", "#856ef2", "#195f53", "#e685c8", "#97675d", "#2fc5d4"]
          },
          "legend": {
            "title": "",
            "orient": "top",
            "labelFont": "Roboto",
            "labelFontSize": 11
          }
        },
        "stroke": {
          "field": "officialnamestate",
          "type": "nominal",
          "scale": {
            "domain": ["New South Wales", "Queensland", "South Australia", "Tasmania", "Territories", "Victoria", "Western Australia"],
            "range": ["#3585bc", "#fe711a", "#856ef2", "#195f53", "#e685c8", "#97675d", "#2fc5d4"]
          }
        },
        "opacity": {"value": 0.8},
        "tooltip": [
          {"field": "officialnamestate", "type": "nominal", "title": "State"},
          {"field": "TemperatureMean", "type": "nominal", "title": "Average Temperature (°C)", "format": ".2f"}
        ]
      }
    },
    {
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 10,
        "fontSize": 11,
        "fontStyle": "italic",
        "color": "grey"
      },
      "encoding": {
        "text": {"field": "Line1"},
        "color": {"value": "gray"},
        "opacity": {
          "condition": {
            "test": "datum['officialnamestate'] == 'New South Wales' && datum['Month'] == '1'",
            "value": 1
          },
          "value": 0.2
        },
        "x": {"value": 195},
        "y": {"value": 30}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 10,
        "fontSize": 11,
        "fontStyle": "italic",
        "color": "grey"
      },
      "encoding": {
        "text": {"field": "Line2"},
        "color": {"value": "gray"},
        "opacity": {
          "condition": {
            "test": "datum['officialnamestate'] == 'New South Wales' && datum['Month'] == '1'",
            "value": 1
          },
          "value": 0.2
        },
        "x": {"value": 195},
        "y": {"value": 45}
      }
    }
  ]
}
,
    {
      "mark": "rule",
      "encoding": {
        "x": {"value": 310},
        "x2": {"value": 310},
        "y": {"value": 60},
        "y2": {"value": 130},
        "color": {"value": "grey"},
        "strokeWidth": {"value": 2}
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "shape": "triangle",
        "color": "grey",
        "size": 75,
        "angle": 180
      },
      "encoding": {
        "x": {"value": 310},
        "y": {"value": 130}
      }
    }

  ]
}
