{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": {"text": "Average Temperatures Across Australian Weather Recordings", "dy": -30, "font": "Roboto", "fontSize": 22},

  "params": [
    {
      "name": "Month_Select",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 12,
        "step": 1,
        "name": "Month:   "
      }
    },

    {
      "name": "Temperature_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 33,
        "step": 1,
        "name": "Minimum Temperature:   "
      }
    },

    {"name": "Country_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Queensland",
            "New South Wales",
            "South Australia",
            "Victoria",
            "Northern Territory",
            "Tasmania", 
            "Western Australia",
            "Australian Capital Territory"
          ],
          "labels": [
            "Show All",
            "Queensland",
            "New South Wales",
            "South Australia",
            "Victoria",
            "Northern Territory",
            "Tasmania", 
            "Western Australia",
            "ACT"
          ],
          "name": "Select State:   "
        }
        }

  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/danielliu2707/FIT3179/main/js/aus_states.topojson",
        "format": {"type": "topojson", "feature": "collection"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/danielliu2707/FIT3179/main/data/weather_final_map_data.csv"
      },
      "transform": [
        {"filter": "datum.Month == Month_Select"},
        {"filter": "datum.AverageTemperature > Temperature_Above"},
        {"filter": "Country_selection == null || datum.officialnamestate == Country_selection"}
      ],
      "mark": {"type": "circle", "size": 70},
      "encoding": {
        "longitude": {
          "field": "longtitude",
          "type": "quantitative"},
        "latitude": {
          "field": "lattitude",
          "type": "quantitative"},
        "color": {
          "field": "AverageTemperature",
          "type": "quantitative",
          "title": "Temperature",
          "scale": {
            "scheme": "yellowgreenblue",
            "domain": [0, 5, 10, 15, 20, 25, 30]
          },
          "legend": {
            "title": "Temperature (°C)",
            "values": [5, 10, 15, 20, 25, 30],
            "titleAnchor": "middle",
            "titlePadding": 15,
            "titleFont": "Roboto",
            "labelFont": "Roboto"
          }
        },
        "size": {
          "field": "TotalRainfall",
          "type": "quantitative",
          "legend": {
            "title": "Total Rainfall (mm)",
            "format": ".1s",
            "titleAnchor": "middle",
            "titlePadding": 13,
            "titleFont": "Roboto",
            "labelFont": "Roboto"

            },
          "scale": {
            "type": "threshold",
            "domain": [0, 100, 1000, 2000, 3000],
            "range": [10, 30, 60, 100]
          }
        },
        "tooltip": [
            {"field": "officialnamestate", "type": "nominal", "title": "State"},
            {"field": "officialnamesuburb", "type": "nominal", "title": "Closest Suburb"},
            {"field": "AverageTemperature", "type": "quantitative", "title": "Average Temperature (°C)", "format": ".2f"},
            {"field": "TotalRainfall", "type": "quantitative", "title": "Total Rainfall (mm)",
            "format": ",.2f"}
          ],
        "opacity": {
          "value": 0.7
        }
      }
    }
  ],

  "config": {
    "title": {"fontSize": 17}
  }
}